@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>
@using Microsoft.AspNetCore.Authentication
<h2>Claims</h2>
<dl>
    @foreach (var claim in User.Claims)
            {
                <dd>@claim.Type</dd>
                <dt>@claim.Value</dt>
            }
</dl>
<h2>Properties</h2>
<dl>
    @foreach (var prop in (await Context.AuthenticateAsync()).Properties.Items)
    {
        <dd>@prop.Key</dd>
        <dt>@prop.Value</dt>
    }
</dl>